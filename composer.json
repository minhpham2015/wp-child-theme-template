{
  "require": {
    "php": ">=7.4",
    "scssphp/scssphp": "^1.12"
  },
  "require-dev": {
    "composer/installers": "^2.2"
  },
  "scripts": {
    "post-install-cmd": [
      "@npm-install",
      "@build"
    ],
    "post-update-cmd": [
      "@npm-install",
      "@build"
    ],
    "npm-install": "npm install",
    "build": "npm run build",
    "build:css": "npm run build:css",
    "build:js": "npm run build:js",
    "watch": "npm run watch",
    "watch:css": "npm run watch:css",
    "dev": "npm run dev",
    "dev:watch": "npm run watch:css"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
