{
  "name": "__CHILD_THEME_SLUG__",
  "version": "__VERSION__",
  "description": "__DESCRIPTION__",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass assets/scss/main.scss:assets/css/main.css --style=expanded --source-map",
    "build:css:min": "sass assets/scss/main.scss:assets/css/main.css --style=compressed --no-source-map",
    "build:js": "terser assets/js/main.js -o assets/js/main.min.js --source-map --compress --mangle",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "sass --watch assets/scss/main.scss:assets/css/main.css --style=expanded --source-map",
    "watch:js": "nodemon --watch assets/js/main.js --exec \"npm run build:js\"",
    "dev": "npm run watch"
  },
  "devDependencies": {
    "sass": "^1.69.0",
    "terser": "^5.24.0",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "wordpress",
    "child-theme",
    "wordpress-theme"
  ],
  "author": "__AUTHOR__",
  "license": "GPL-2.0-or-later"
}

